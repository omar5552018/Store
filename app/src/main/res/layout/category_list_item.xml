<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp" tools:srcCompat="@drawable/hatimage"
            android:id="@+id/categoryImage"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:scaleType="centerCrop"/>
    <TextView
            android:text="HATS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categoryText"
            app:layout_constraintTop_toTopOf="@+id/categoryImage"
            app:layout_constraintBottom_toBottomOf="@+id/categoryImage"
            app:layout_constraintEnd_toEndOf="@+id/categoryImage"
            app:layout_constraintStart_toStartOf="@+id/categoryImage"
            android:layout_marginStart="8dp" android:textColor="@android:color/background_light"
            android:fontFamily="@font/abeezee" android:textStyle="bold" android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>